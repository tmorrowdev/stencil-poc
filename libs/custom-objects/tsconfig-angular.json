{
  "extends":"../../tsconfig.base.json",
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2015"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "react",
    "removeComments": false,
    "sourceMap": true,
    "target": "es2017"
  },
  "include": [
    "crayons-custom-objects-angular/**/*.ts",
    "crayons-custom-objects-react/package.json"
  ],
  "exclude": ["**/__tests__/**"],
  "compileOnSave": false,
  "buildOnSave": false
}
