{
  "name": "@ds/custom-objects",
  "description": "Custom Objects with Crayons",
  "main": "./index.ts",
  "module": "./index.ts",
  "types": "./dist/types/components.d.ts",
  "collection": "./dist/collection/collection-manifest.json",
  "collection:main": "./dist/collection/index.js",
  "files": [
    "dist/",
    "loader/",
    "react/",
    "hydrate/"
  ],
  "scripts": {
    "add:css": "npm run clean:css && npx mkdirp css",
    "add:react": "npm run clean:react && npx mkdirp react",
    "add:angular": "npm run clean:angular && npx mkdirp angular",
    "build": "npm run add:react  && npm run add:angular && npm run build:components && npm run build:react && npm run build:angular",
    "build:components": "stencil build --docs",
    "build:mincss": "cleancss -b css/*.css css",
    "build:react": "tsc --project tsconfig-react.json",
    "build:angular": "tsc --project tsconfig-angular.json",
    "build:scss": "node-sass --include-path node_modules --include-path ../../node_modules --output-style compressed --recursive ../../styles/global/ -o css",
    "build:styles": "npm run build:scss && npm run build:autoprefix && npm run build:mincss ",
    "clean:react": "rimraf react",
    "clean:angular": "rimraf angular",
    "directional-to-logical": "npx postcss './src/**/*.scss' --config ../../crayons-core/plugins/postcss-plugins/postcss.config.js --replace --no-map --verbose",
    "generate": "stencil generate",
    "start": "stencil build --dev --watch --serve",
    "test:ci": "stencil test --spec --ci --e2e --max-workers=2",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "test": "stencil test --spec --e2e --max-workers=1"
  },
  "dependencies": {
    "@freshworks/crayons": "^4.1.0-beta.3",
    "@freshworks/crayons-i18n": "^4.1.0-beta.0",
    "@stencil/core": "2.17.4",
    "stencil": "^0.0.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@angular-architects/module-federation": "14.3.9",
    "@angular/animations": "~14.0.0",
    "@angular/cdk": "14.0.4",
    "@angular/common": "~14.0.0",
    "@angular/compiler": "~14.0.0",
    "@angular/core": "~14.0.0",
    "@angular/forms": "~14.0.0",
    "@angular/material": "14.0.4",
    "@angular/platform-browser": "~14.0.0",
    "@angular/platform-browser-dynamic": "~14.0.0",
    "@angular/router": "~14.0.0",
    "@nrwl/angular": "14.4.2",
    "@stencil/sass": "^1.4.1",
    "@types/jest": "^26.0.24",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "autoprefixer": "^10.3.7",
    "clean-css-cli": "^5.5.0",
    "jest": "^27.4.5",
    "jest-cli": "^27.4.5",
    "node-sass": "^7.0.1",
    "postcss": "^8.3.9",
    "postcss-cli": "^9.0.1",
    "postcss-rtlcss": "^3.6.3",
    "prepend-file": "^2.0.1",
    "puppeteer": "^10.0.0",
    "react-output-target": "^0.0.9",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.5",
    "workbox-build": "4.3.1"
  },
  "license": "MIT"
}
